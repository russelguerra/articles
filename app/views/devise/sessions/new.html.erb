<div class="position-absolute top-50 start-50 translate-middle bg-light p-3 rounded col-3">
  <h2>Sign in</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password, class:'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
    <div class="d-grid gap-2">
      <%= f.submit "Sign in", class:'btn btn-success' %>
    </div>
    <hr>
    <%= link_to "Don't have an account yet? Register now...", new_registration_path(resource_name) %>
  <% end %>
</div>