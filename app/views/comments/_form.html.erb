<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div class="mb-3">
        <%= form.label :commenter, "Display name", class:'form-label' %><br>
        <%= form.text_field :commenter, class:'form-control' %>
    </div>

    <div class="mb-3">
        <%= form.label :body, "Comment", class:'form-label' %><br>
        <%= form.text_area :body, class:'form-control' %>
    </div>

    <div>
        <%= form.submit "Submit comment", class:'btn btn-success' %>
    </div>
<% end %>